{
  "AllowedHosts": "*",
  "AuthenticationOptions": {
    "Provider": "JwtBearer", // Authentication type (could be "JwtBearer" or another scheme)
    "AuthenticationProviderKey": "Bearer", // Key for the authentication provider
    "RequireHttpsMetadata": false // Require HTTPS for metadata
  },
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5000", // The URL of the Ocelot API Gateway
    "Timeout": 5000 // Global timeout for downstream requests
  },
  "JWT": {
    "Key": "",
    "Issuer": "md"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
    "ReRoutes": [
      {
        "UpstreamPathTemplate": "/auth/{everything}",
        "DownstreamPathTemplate": "/api/{everything}",
        "DownstreamScheme": "https",
        "DownstreamHostAndPorts": [
          {
            "Host": "localhost",
            "Port": 7283
          }
        ]
      },
      {
        "UpstreamPathTemplate": "/books/{everything}",
        "DownstreamPathTemplate": "/api/{everything}",
        "DownstreamScheme": "https",
        "DownstreamHostAndPorts": [
          {
            "Host": "localhost",
            "Port": 7148
          }
        ]
      },
      {
        "UpstreamPathTemplate": "/borrows/{everything}",
        "DownstreamPathTemplate": "/api/{everything}",
        "DownstreamScheme": "https",
        "DownstreamHostAndPorts": [
          {
            "Host": "localhost",
            "Port": 7166
          }
        ]
      }
    ]
}
